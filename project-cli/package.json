  },
  "testMatch": [
   "**/*.spec.(ts|js)"
  ],
  "setupFiles": [
   "./test/unit/mock.setup.js"
  ],
  "globals": {
   "ts-jest": {
    "tsConfig": "tsconfig.json"
   }
  }
 }
}
