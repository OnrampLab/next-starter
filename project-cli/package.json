{
 "name": "cli-boilerplate",
 "version": "1.0.0",
 "description": "",
 "main": "index.js",
 "scripts": {
  "build": "tsc",
  "test": "jest --coverage",
  "start": "node ./dist/index.js a",
  "watch": "tsc -w"
 },
 "author": "",
