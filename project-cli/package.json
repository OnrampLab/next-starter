  "mustache": "^3.1.0"
 },
 "devDependencies": {
  "@types/jest": "^24.0.23",
  "@types/node": "^12.12.14",
  "jest": "^24.9.0",
  "jest-cli": "^24.9.0",
  "jest-teamcity": "^1.5.0",
  "memory-fs": "^0.5.0",
  "ts-jest": "^24.2.0",
  "typescript": "^3.7.2"
 },
 "jest": {
  "testResultsProcessor": "jest-teamcity",
